@using MyPerfume.Web.ViewModels.Designers.ViewModels
@model IEnumerable<DesignerViewModel>
@{
    this.ViewData["Title"] = "All Designers";
}

<h1>This is all designers!</h1>

<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">All Trips</h1>
        <div style="padding: 5%;">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Designer Name</th>
                        <th scope="col">Designer Created On</th>
                        <th scope="col">Designer Modified On</th>
                        <th scope="col">Designer Edit</th>
                        <th scope="col">Designer Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var designer in @Model)
                    {
                    <tr>
                        <th scope="row">@designer.Name</th>
                        <td>@designer.CreatedOn</td>
                        <td>@designer.ModifiedOn</td>
                        <td>
                            <div class="button-holder">
                                <a asp-action="Edit" asp-route-id="@designer.Id" class="btn btn-info text-uppercase">Edit designer</a>
                            </div>
                        </td>
                        <td>
                            <div class="button-holder">
                                <a asp-action="Delete" asp-route-id="@designer.Id" class="btn btn-info text-uppercase">Delete designer</a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

