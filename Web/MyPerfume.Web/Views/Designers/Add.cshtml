@using MyPerfume.Web.ViewModels.Perfums.InputModels
@model CreateDesignerInputModel
@{
    this.ViewData["Title"] = "Add Designer";
}

<h1>Fill the name of designer, please!</h1>

<form asp-controller="Designers" asp-action="Add" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
  
    <hr />

    <input type="submit" value="Apply" class="btn-primary" />
</form>

