@using MyPerfume.Web.ViewModels.InputModels
@model PictureUrlInputModel
@{ 
    this.ViewData["Title"] = "Edit Picture Url";
}

<h1>Edit the name of @this.ViewData["ClassName"], please!</h1>

<form method="post" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="@Model.Url">Url</label>
        <input asp-for="@Model.Url" class="form-control" placeholder="@Model.Url" disabled/>
        <span asp-validation-for="@Model.Url" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.DesignerAndPerfumeNames">Designers And Perfume Names</label>
        <input hidden asp-for="@Model.DesignerAndPerfumeNames" />
        <input asp-for="@Model.DesignerAndPerfumeNames" class="form-control" placeholder="@Model.DesignerAndPerfumeNames" disabled />
        <span asp-validation-for="@Model.DesignerAndPerfumeNames" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-3">
        <label asp-for="@Model.PictureNumber"></label>
        <input hidden asp-for="@Model.PictureNumber" />
        <select asp-for="@Model.PictureNumber" class="form-control" asp-items="@Model.PictureNumbers" placeholder="Enter number of picture" disabled>
        </select>
        <span asp-validation-for="@Model.PictureNumber" class="text-danger"></span>
    </div>

    <hr />

    <button type="submit" class="btn btn-primary">Apply</button>
    <a class="btn btn-primary" asp-action="All">Back</a>
</form>

