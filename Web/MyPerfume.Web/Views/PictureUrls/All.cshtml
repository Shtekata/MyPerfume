@using MyPerfume.Web.ViewModels.ViewModels
@model PagePictureUrlViewModel
@{
    this.ViewData["Title"] = "All Picture Urls";
}

<h1>This is all @this.ViewData["ClassNames"]!</h1>

<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">All @this.ViewData["ClassNames"]</h1>
        <a class="btn btn-primary" asp-action="Add">Add @this.ViewData["ClassName"]</a>
        <div style="padding: 2%;">
            @if (Model != null)
            {
                @foreach (var picture in @Model.PictureUrls.OrderBy(x => x.DesignerAndPerfumeNames).ThenBy(y => y.PictureNumber))
                {
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Number</th>
                                <th scope="col">ShowNumber</th>
                                <th scope="col">Name</th>
                                <th scope="col">Created On</th>
                                <th scope="col">Modified On</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <th scope="row">@picture.PictureNumber</th>
                                <td>@picture.PictureShowNumber</td>
                                <td>@picture.DesignerAndPerfumeNames</td>
                                <td>@picture.CreatedOn</td>
                                <td>@picture.ModifiedOn</td>
                                <td>
                                    <div class="button-holder">
                                        <a asp-action="Edit" asp-route-id="@picture.Id" class="btn btn-info text-uppercase">
                                            Edit
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    <div class="button-holder">
                                        <a asp-action="Delete" asp-route-id="@picture.Id" class="btn btn-danger text-uppercase">
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-1">
                            <strong>
                                Picture Url:
                            </strong>
                        </div>
                        <div class="col-md-8">
                            <a href="@picture.Url"> @picture.Url</a>
                        </div>
                        <div class="col-md-3">
                            <div class="card mb-3" style="max-width: 540px;">
                                <div class="row no-gutters">
                                    <div class="col-md-12">
                                        <a href="@picture.Url">
                                            <img src="@picture.Url" class="card-img" alt="...">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                }
            }

        </div>
    </div>
</section>
<nav aria-label="...">
    <ul class="pagination justify-content-center">

        @if (Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item active">
                <a class="page-link"
                   asp-route-id="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= Model.PagesCount; i++)
        {
            var active = i == Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-route-id="@i">@i</a>
            </li>
        }

        @if (Model.CurrentPage == Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Next</a>
            </li>
        }
        else
        {
            <li class="page-item active">
                <a class="page-link"
                   asp-route-id="@(Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>
