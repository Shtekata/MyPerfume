@using MyPerfume.Web.ViewModels.InputModels
@model PictureUrlInputModel
@{
    this.ViewData["Title"] = "Edit Picture Url";
}

<h1>Edit the name of @this.ViewData["ClassName"], please!</h1>

<form class="management-background" method="post" enctype="multipart/form-data">
    <br />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group col-sm-8">
        <label asp-for="@Model.Url">Url</label>
        <input asp-for="@Model.Url" class="form-control" placeholder="@Model.Url" disabled />
        <span asp-validation-for="@Model.Url" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-4">
        <label asp-for="@Model.DesignerName">Designer Name</label>
        <input hidden asp-for="@Model.DesignerName" />
        <select asp-for="@Model.DesignerName" class="form-control" asp-items="@Model.Extensions["Designers"]" placeholder="@Model.DesignerName" disabled></select>
        <span asp-validation-for="@Model.DesignerName" class="text-danger"></span>
    </div>

    <div class="form-group col-sm-4">
        <label asp-for="@Model.PerfumeName">Perfume Name</label>
        <input hidden asp-for="@Model.PerfumeName" />
        <select asp-for="@Model.PerfumeName" class="form-control" asp-items="@Model.Extensions["Perfumes"]" placeholder="@Model.PerfumeName" disabled></select>
        <span asp-validation-for="@Model.PerfumeName" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-4">
        <label asp-for="@Model.AdditionalInfo">Additional Info</label>
        <input hidden asp-for="@Model.AdditionalInfo" />
        <input asp-for="@Model.AdditionalInfo" class="form-control" placeholder="@Model.AdditionalInfo" disabled />
        <span asp-validation-for="@Model.AdditionalInfo" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-4">
        <label asp-for="@Model.SecondAdditionalInfo">Additional Information</label>
        <input hidden asp-for="@Model.SecondAdditionalInfo" />
        <input asp-for="@Model.SecondAdditionalInfo" class="form-control" placeholder="@Model.SecondAdditionalInfo" disabled />
        <span asp-validation-for="@Model.SecondAdditionalInfo" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-3">
        <label asp-for="@Model.PictureNumber">Picture Number</label>
        <input hidden asp-for="@Model.PictureNumber" />
        <select asp-for="@Model.PictureNumber" class="form-control" asp-items="@Model.Extensions["PictureNumbers"]" placeholder="@Model.PictureNumber" disabled> </select>
        <span asp-validation-for="@Model.PictureNumber" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-3">
        <label asp-for="@Model.PictureShowNumber">Picture Show Number</label>
        <select asp-for="@Model.PictureShowNumber" class="form-control" asp-items="@Model.Extensions["PictureShowNumbers"]" placeholder="@Model.PictureShowNumber">
        </select>
        <span asp-validation-for="@Model.PictureShowNumber" class="text-danger"></span>
    </div>
    <hr />
    <div class="form-group col-sm-6">
        <button type="submit" class="btn btn-primary">Apply</button>
        <a class="btn btn-primary" asp-action="All">Back</a>
    </div>
    <br />
</form>

