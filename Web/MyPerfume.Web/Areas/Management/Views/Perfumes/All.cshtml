@using MyPerfume.Web.ViewModels.ViewModels
@model PagePerfumeViewModel
@{
    this.ViewData["Title"] = "All Perfumes";
}
<br />
<h2 style="margin: 1%; text-align: center;">All @this.ViewData["ClassNames"]</h2>
<div class="form-row">
    <div class="col-md-2">
        <a class="btn btn-success" asp-action="Add">Add @this.ViewData["ClassName"]</a>
    </div>
    <div class="col-md-10">
        <nav aria-label="...">
            <ul class="pagination justify-content-end">

                @if (Model.CurrentPage == 1)
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item active">
                        <a class="page-link"
                           asp-route-id="@(Model.CurrentPage - 1)">Previous</a>
                    </li>
                }

                @for (int i = 1; i <= Model.PagesCount; i++)
                {
                    var active = i == Model.CurrentPage ? "active" : string.Empty;
                    <li class="page-item @active">
                        <a class="page-link"
                           asp-route-id="@i">@i</a>
                    </li>
                }

                @if (Model.CurrentPage == Model.PagesCount)
                {
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item active">
                        <a class="page-link"
                           asp-route-id="@(Model.CurrentPage + 1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
<hr />
<form>
    @foreach (var perfume in @Model.Perfumes)
    {
        <div class="card">
            <h5 class="card-header">Парфюм: <a href="@perfume.Url">@perfume.Name</a></h5>
            <div class="card-body">
                <div class="form-row">
                    <div class="form-group col-md-11">
                        <section class="py-sm-0">
                            <div class="container-fluid">
                                <hr />
                                <div style="padding: 2%;">
                                    <table class="table-sm table-bordered">
                                        <thead class="thead-light">
                                            <tr>
                                                <th scope="col">Name</th>
                                                <th scope="col">Designer</th>
                                                <th scope="col">Customer Type</th>
                                                <th scope="col">Country</th>
                                                <th scope="col">Year Of Manifacture</th>
                                                <th scope="col">Color</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row">@perfume.Name</th>
                                                <td>@perfume.DesignerName</td>
                                                <td>@perfume.CustomerType</td>
                                                <td>@perfume.CountryName</td>
                                                <td>@perfume.YearOfManifacture</td>
                                                <td>@perfume.ColorName</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="form-group">
                        <label asp-for="@perfume.Niche"></label>
                        <input type="checkbox" asp-for="@perfume.Niche" class="form-control" disabled />
                        <span asp-validation-for="@perfume.Niche" class="text-danger"></span>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        Description
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <h5 class="card-text"><small> @Html.Raw(@perfume.SanitizedDescription)</small></h5>
                        </blockquote>
                    </div>
                </div>
                <br />
                @if (perfume.PictureUrls?.Count() > 0)
                {
                    <div class="form-group">
                        <div class="form-row">
                            @foreach (var pictureUrl in perfume.PictureUrls.OrderBy(x => x.DesignerAndPerfumeNames).ThenBy(x => x.PictureNumber))
                            {
                                <div class="form-group col-md-1">
                                    <input asp-for="@pictureUrl.PictureNumber" disabled class="form-control" placeholder="@pictureUrl.PictureNumber" />
                                </div>
                                <div class="form-group col-md-1">
                                    <input asp-for="@pictureUrl.PictureShowNumber" disabled class="form-control" placeholder="@pictureUrl.PictureShowNumber" />
                                </div>
                                <div class="form-group col-md-4">
                                    <div class="form-check m-1">
                                        <input asp-for="@pictureUrl.IsSelected" disabled class="form-check-input" />
                                        <label class="form-check-label" asp-for="@pictureUrl.IsSelected">
                                            @pictureUrl.DesignerAndPerfumeNames
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                <br />
                <a asp-action="Edit" asp-route-id="@perfume.Id" class="btn btn-primary btn-sm">
                    Edit @this.ViewData["ClassName"]
                </a>
                <a asp-action="Delete" asp-route-id="@perfume.Id" class="btn btn-danger btn-sm">
                    Delete @this.ViewData["ClassName"]
                </a>
                <hr />
            </div>
        </div>
        <hr />
    }
</form>
<nav aria-label="...">
    <ul class="pagination justify-content-center">

        @if (Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item active">
                <a class="page-link"
                   asp-route-id="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= Model.PagesCount; i++)
        {
            var active = i == Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-route-id="@i">@i</a>
            </li>
        }

        @if (Model.CurrentPage == Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Next</a>
            </li>
        }
        else
        {
            <li class="page-item active">
                <a class="page-link"
                   asp-route-id="@(Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>

