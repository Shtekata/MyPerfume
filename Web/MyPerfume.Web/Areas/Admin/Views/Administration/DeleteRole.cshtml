@model EditRoleViewModel
@{
    ViewData["Title"] = "DeleteRole";
}

<h1>DeleteRole</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" disabled class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <input type="hidden" asp-for="@Model.RoleName" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="AllRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role.</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                for (int i = 0; i < Model.Users.Count; i++)
                {
                    <input type="hidden" asp-for="@Model.Users[i]" />
                    <h5 class="card-title">@Model.Users[i]</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment.</h5>
            }
        </div>
        <div class="card-footer">
            <strong>Аll users will be removed from this role!</strong>
        </div>
    </div>
</form>

